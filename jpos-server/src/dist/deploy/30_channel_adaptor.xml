<?xml version="1.0" encoding="UTF-8"?>
<channel-adaptor name="channel-adaptor" logger="Q2" class="org.jpos.q2.iso.ChannelAdaptor">
  <channel class="org.jpos.iso.channel.NACChannel"
           packager="org.jpos.iso.packager.ISO87APackager">
    <property name="header" value="ISO015000077"/>
    <property name="host" value="localhost"/>
    <property name="port" value="9150"/>
  </channel>

  <!-- From network -> TM -->
  <out>in</out>

  <!-- From TM -> network -->
  <in>out</in>

  <reconnect-delay>10000</reconnect-delay>
</channel-adaptor>
