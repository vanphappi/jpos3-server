<?xml version="1.0" encoding="UTF-8"?>
<qserver name="qserver" class="org.jpos.q2.iso.QServer" logger="Q2" realm="qserver.server">
  <!-- cổng lắng nghe -->
  <attr name="port" type="int">9150</attr>

  <!-- KHỞI TẠO KÊNH + PACKAGER -->
  <channel class="org.jpos.iso.channel.NACChannel"
           packager="org.jpos.iso.packager.ISO87APackager"/>

  <!-- Sử dụng QueueingListener để đẩy request vào txnmgr -->
  <request-listener class="com.example.QueueingListener" logger="Q2"/>
</qserver>